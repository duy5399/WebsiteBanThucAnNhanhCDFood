@model Model.EF.MONAN

@{
    ViewBag.Title = "Thêm mới món ăn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
}

@section header{
    Thêm mới món ăn
}

@section script{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault(); 
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtHinhMinhHoa').val(url);
            }
            finder.popup();
        })
        var editor = CKEDITOR.replace('txtMota', {
            customConfig: '/Plugins/ckeditor/config.js',
        });
    </script>
}   

<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Thêm mới món ăn
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Insert", "QLMonAn", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="table-responsive">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th width="50%">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TenMonAn, htmlAttributes: new { @class = "control-label col-md-12" })
                                        </div>
                                    </th>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.TenMonAn, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.TenMonAn, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="50%">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.MaCD, htmlAttributes: new { @class = "control-label col-md-12" })
                                        </div>
                                    </th>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.MaCD, null, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.MaCD, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.HinhMinhHoa, htmlAttributes: new { @class = "control-label col-md-12" })
                                        </div>
                                    </th>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.HinhMinhHoa, new { htmlAttributes = new { @class = "form-control"}, @id = "txtHinhMinhHoa" })
                                                <a href="#" id="btnSelectImage">Chọn ảnh</a>
                                                @Html.ValidationMessageFor(model => model.HinhMinhHoa, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-12" })
                                        </div>
                                    </th>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                @Html.TextAreaFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } , id = "txtMota" })
                                                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.DonGia, htmlAttributes: new { @class = "control-label col-md-12" })
                                        </div>
                                    </th>
                                    <td>
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                                        </div>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                        <table align="center">
                            <tr>
                                <td align="center" colspan="2">
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Tạo mới" class="btn btn-default" />
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                }
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

<div>
    <a href="/dsmonan">Back to List</a>
</div>
