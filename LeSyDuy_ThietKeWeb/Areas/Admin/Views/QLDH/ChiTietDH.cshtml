@model List<Model.ViewModel.CTDonHangViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
}

@section header{
    Chi tiết đơn hàng
}
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Chi tiết đơn hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <td align="center"><b>Tên món ăn</b></td>
                                <td align="center"><b>Hình minh họa</b></td>
                                <td align="center"><b>Đơn giá</b></td>
                                <td align="center"><b>Số lượng</b></td>
                                <td align="center"><b>Thành tiền</b></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td align="center">@item.TenMonAn</td>
                                    <td align="center"><img src="@item.HinhMinhHoa" width="100px" height="60px"/></td>
                                    <td align="center">@item.DonGia.GetValueOrDefault(0).ToString("N0") VNĐ</td>
                                    <td align="center">@item.SoLuong</td>
                                    <td align="center">@item.Thanhtien.GetValueOrDefault(0).ToString("N0") VNĐ</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

<div>
    <a href="/quan-ly-don-hang">Back to List</a>
</div>