@model Model.EF.KHACHHANG

@{
    ViewBag.Title = "Chỉnh sửa khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
}

@section header{
    Chỉnh sửa khách hàng
}

<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Thêm mới khách hàng
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Update", "QLKH", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                <div class="table-responsive">
                    @Html.HiddenFor(model => model.MaKH)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="50%">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.TenDN, htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                </th>
                                <td>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th width="50%">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.HoTenKH, htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                </th>
                                <td>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.HoTenKH, null, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.HoTenKH, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                </th>
                                <td>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.GioiTinh, null, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                </th>
                                <td>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                </th>
                                <td>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DienThoaiKH, htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                </th>
                                <td>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.DienThoaiKH, new { placeholder = "03-xxxxxxxx", htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DienThoaiKH, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table align="center">
                        <tr>
                            <td align="center" colspan="2">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Chỉnh sửa" class="btn btn-default" />
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                    <!-- /.table-responsive -->
                }
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

<div>
    <a href="/dskhachhang">Back to List</a>
</div>
