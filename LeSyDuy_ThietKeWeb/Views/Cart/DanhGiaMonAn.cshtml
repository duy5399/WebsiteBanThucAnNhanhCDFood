@model List<Model.ViewModel.DanhGiaViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Đánh giá món ăn";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<style>
    .content_detail {
        margin: 2% 10% 2% 10%;
        min-height:560px;
    }
    .panel .panel-content {
        width: 49%;
        padding: 15px;
        float: left;
    }
</style>
<div class="content_detail">
    <div class="row">

        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    @{ var url = "/Chi-tiet/" + ViewBag.ChuDe + "/" + ViewBag.TenMonAn + "/" + ViewBag.MaMonAn;}
                    <p><a href="/thuc-don">Thực đơn</a> > @ViewBag.ChuDe >  <a href="@url">@ViewBag.TenMonAn</a> > Đánh giá</p>
                </div>
                <div class="panel-content">
                    <img src="@ViewBag.HinhMinhHoa" alt="@ViewBag.HinhMinhHoa-img" width="89%" />
                </div>
                <!-- /.panel-heading -->
                <div class="panel-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Tên khách hàng</th>
                                    <th>Rate</th>
                                    <th>Nội dung đánh giá</th>
                                    <th>Ngày đánh giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TenKH</td>
                                        <td>
                                            @switch (item.Rate)
                                            {
                                                case 1:
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                                    break;
                                                case 2:
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                                    break;
                                                case 3:
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                                    break;
                                                case 4:
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                                    break;
                                                case 5:
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    break;
                                            }
                                        </td>
                                        <td>@item.NoiDungDG</td>
                                        <td>@item.NgayDG</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @*@Html.PagedListPager(Model, page => Url.Action("DanhGiaMonAn", new { page }))*@
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
</div>