@model LeSyDuy_ThietKeWeb.Models.RegisterModel
@{
    Layout = null;
}


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>CD Food - Đăng ký</title>
    <script src="../../javascript/dangky.js" type="text/javascript"></script>
    <link href="~/Content/Register.css"  rel="stylesheet" />

</head>

<body>
    <div class="signup">
        <p align="center"><font size="+4" color="#FF5B5B"><b>Đăng ký</b></font></p>
        <table width="100%" border="0">
            <tr>
                <td width="200px">
                    <hr color="#FF5E5E" />
                </td>
                <td align="center">
                    <a href="~/Views/Home/HomePage.cshtml"><img src="/Images/logo/hotdog.gif" alt="logo" width="150px" height="150px" /></a>
                </td>
                <td width="200px">
                    <hr color="#FF5E5E" />
                </td>
            </tr>
        </table>
        @using (Html.BeginForm("Register", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { style = "color:red", @class = "text-danger" })
            if(ViewBag.Register_Success!= null)
            {
                <div class="thongbao thongbao-success">@ViewBag.Register_Success</div>
            }
            <fieldset style="border-radius:10px">
                <legend><b>Thông tin đăng nhập</b></legend>
                <table width="100%" border="0" >
                    <tr>
                        <td width="200px">
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                        </td>
                        <td width="150px">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                        </td>
                        <td width="200px">
                            @Html.ValidationMessageFor(model => model.Username, "", new { style = "color:red", @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td width="200px">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                        </td>
                        <td width="150px">
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                        <td width="200px">
                            @Html.ValidationMessageFor(model => model.Password, "", new { style = "color:red", @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td width="200px">
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                        </td>
                        <td width="150px">
                            @Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                        <td width="200px">
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { style = "color:red", @class = "text-danger" })
                        </td>
                    </tr>
                </table>
            </fieldset>
            <br />
            <fieldset style="border-radius:10px">
                <legend><b>Thông tin cá nhân</b></legend>
                <table width="100%" border="0" align="center">
                    <tr>
                        <td width="200px">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        </td>
                        <td width="150px">
                            @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                        <td width="200px">
                            @Html.ValidationMessageFor(model => model.Name, "", new { style = "color:red", @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td width="200px">
                            @Html.LabelFor(model => model.Sex, htmlAttributes: new { @class = "control-label col-md-2" })
                        </td>
                        <td width="150px">
                            @Html.DropDownListFor(model => model.Sex, new SelectList(new List<SelectListItem>{ new SelectListItem{Text ="Nam", Value="Nam"}, new SelectListItem{Text ="Nữ", Value="Nữ"} }, "Value", "Text"), new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                        <td width="200px">
                            @Html.ValidationMessageFor(model => model.Sex, "", new { style = "color:red", @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td width="200px">
                            @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label col-md-2" })
                        </td>
                        <td width="150px">
                            @Html.EditorFor(model => model.NgaySinh, new { placeholder = "dd/mm/yyyy", htmlAttributes = new { @class = "form-control" } })
                        </td>
                        <td width="200px">
                            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { style = "color:red", @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td width="200px">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        </td>
                        <td width="150px">
                            @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                        <td width="200px">
                            @Html.ValidationMessageFor(model => model.Email, "", new { style = "color:red", @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td width="200px">
                            @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
                        </td>
                        <td width="150px">
                            @Html.TextBoxFor(model => model.Phone, new { placeholder = "03-xxxxxxxx", htmlAttributes = new { @class = "form-control" } })
                        </td>
                        <td width="200px">
                            @Html.ValidationMessageFor(model => model.Phone, "", new { style = "color:red", @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="reset" name="btnreset" value="Đặt lại" onclick="setFocus();" /><span>  </span><input type="submit" name="btnsubmit" value="Đăng ký" />    </td>
                        <td></td>
                    </tr>
                </table>
            </fieldset>
        }
        <table width="100%" border="0" align="center">
            <tr>
                <td></td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <hr width="50%" color="#FF5E5E" align="center" />
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <a href="/dang-nhap" class="dngaz"><p align="center"><font size="+2">Quay về trang đăng nhập</font></p></a>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <a href="/trang-chu" class="dngaz"><p align="center"><font size="+2">Quay về trang chủ</font></p></a>
                </td>
            </tr>
        </table>
        <h4 align="center"><font style="font-style:italic" color="#FF0000">Dấu (*) là bắt buộc.</font></h4>
    </div>
</body>
</html>


