@model Model.EF.KHACHHANG

@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
}

@section header{
    Thông tin cá nhân    
}

<div class="row">

    <div class="col-lg-11">

        <div class="panel panel-default">

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    @Html.HiddenFor(model => model.MaKH)
                    <table class="table table-striped table-bordered table-hover">
                        <tbody>
                            <tr>
                                <td colspan="2">
                                    <div class="avatar">
                                        <img src="~/Images/icon/avatar.gif" alt="avatar_img" width="100%" height="100%" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th width="50%">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.HoTenKH, htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                </th>
                                <td>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.HoTenKH, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.HoTenKH, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.TenDN, htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                </th>
                                <td>
